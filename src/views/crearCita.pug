doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Agendar Cita
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/home.css")
    script(src="https://kit.fontawesome.com/4db8fdbf3d.js", crossorigin="anonymous")

  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-body-tertiary
      .container-fluid
        a.navbar-brand(href="#") La Mascota
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarText", aria-controls="navbarText", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarText
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link(href="/home") Men√∫
            li.nav-item
              a.nav-link(href="/crearCita") Ver Citas
          ul.navbar-nav.ml-auto
            li.nav-item.user-section
              span.navbar-text.user-info
                img(src="https://via.placeholder.com/30", alt="User Image", style="width: 30px; height: 30px; border-radius: 50%;")
                | Nombre Usuario

    .container.mt-5
      h2.text-center Agendar Citas

      form
        .row.g-3
          .col-md-6
            label(for="fechanacimiento", class="form-label") Fecha de Citas
            input(type="date", class="form-control", id="fechanacimiento", name="fechanacimiento")

          .col-md-6
            label(for="horacita", class="form-label") Hora
            input(type="time", class="form-control", id="horacita", name="horacita")

          .col-md-6
            label(for="servicio", class="form-label") Servicio
            select(class="form-select", aria-label="Default select example", id="servicio", name="servicio")
              option(selected) Elige un servicio
              option(value="1") Consulta General

          .col-md-6
            label(for="cliente", class="form-label") Buscar Cliente
            .input-group
              input(type="text", class="form-control", id="cliente", name="cliente")
              button.btn.btn-outline-secondary(type="button") Buscar Cliente

            .col-md-6.mt-2
            label(for="cliente", class="form-label") 
            a.btn.btn-secondary(href="/crearCliente") Agregar Cliente
            button.btn.btn-secondary(type="button", style="margin-left: 5px;") Agregar Mascota

      .col-12.text-center.mt-3
        table.table.table-striped.table-bordered.mt-4
          thead
            tr
              th(scope="col") Primer Nombre Cliente
              th(scope="col") Primer Apellido Cliente
              th(scope="col") Identidad Cliente
              th(scope="col") Tipo Mascota
              th(scope="col") Nombre Mascota
          tbody
            tr
              td Primer Nombre Cliente
              td Primer Apellido Cliente
              td Identidad Cliente
              td Tipo Mascota
              td Nombre Mascota

    .d-grid.gap-2.d-md-flex.justify-content-md-end.mt-4
      button.btn.btn-success(type="submit") Guardar
      a.btn.btn-primary(href="/") Regresar
